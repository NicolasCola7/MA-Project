<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <ImageView
        android:id="@+id/emptyStateIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:alpha="0.6"
        android:src="@drawable/ic_trip"
        app:layout_constraintBottom_toTopOf="@id/emptyStateText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/emptyStateText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Nessun viaggio programmato"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/emptyStateButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emptyStateIcon" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/emptyStateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pianifica un nuovo viaggio"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        app:icon="@drawable/ic_add_location_alt_24"
        app:iconGravity="start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emptyStateText" />

</androidx.constraintlayout.widget.ConstraintLayout>