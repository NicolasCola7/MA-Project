<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/insight_card"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/info_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Icona del tipo di insight (opzionale) -->
        <ImageView
            android:id="@+id/insight_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start"
            android:layout_marginBottom="8dp"
            android:contentDescription="Tipo insight"
            android:visibility="gone"
            app:tint="@color/info_dark" />

        <!-- Messaggio principale -->
        <TextView
            android:id="@+id/insight_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Insight message"
            android:textColor="@color/info_dark"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp"
            tools:text="I tuoi viaggi sono in crescita! Continua cosÃ¬!" />

        <!-- Pulsante di azione -->
        <Button
            android:id="@+id/insight_action"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:text="Azione"
            android:textColor="@color/info_dark"
            android:textSize="12sp"
            android:textStyle="bold"
            android:minHeight="32dp"
            android:paddingHorizontal="12dp"
            android:visibility="gone"
            tools:text="Vedi statistiche"
            tools:visibility="visible" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>