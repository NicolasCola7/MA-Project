<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.travel_companion.presentation.viewmodel.HomeViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Card viaggio con sfondo -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTrip"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:visibility="gone">

                <!-- Container per l'immagine di sfondo -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Immagine di sfondo -->
                    <ImageView
                        android:id="@+id/ivTripImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:contentDescription="Immagine del viaggio"
                        tools:src="@drawable/ic_launcher_background" />

                    <!-- Overlay scuro per migliorare la leggibilità del testo -->
                    <View
                        android:id="@+id/overlay_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_overlay" />

                    <!-- Placeholder quando non c'è immagine -->
                    <View
                        android:id="@+id/viewImagePlaceholder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                    <!-- Freccia in alto a destra -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="16dp"
                        android:contentDescription="Vai ai dettagli"
                        android:src="@drawable/ic_arrow_forward"
                        android:background="@drawable/icon_background"
                        android:padding="10dp"
                        />

                    <!-- Contenuto testuale sovrapposto -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:gravity="bottom">

                        <!-- Destinazione -->
                        <TextView
                            android:id="@+id/tvDestination"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="3"
                            tools:text="Roma, Italia" />

                        <!-- Container per date e stato -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical">

                            <!-- Date -->
                            <TextView
                                android:id="@+id/tvDates"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="14sp"
                                android:shadowColor="#80000000"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:shadowRadius="2"
                                tools:text="15/12/2024 10:00 – 20/12/2024 18:00" />

                            <!-- Stato viaggio -->
                            <TextView
                                android:id="@+id/tvTripStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:text="IN CORSO"
                                android:textColor="@color/green"
                                android:background="@drawable/status_background"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp" />

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <include
                android:id="@+id/emptyStateLayout"
                layout="@layout/empty_state_home"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="40dp" />

            <!-- Sezione Suggerimenti -->
            <LinearLayout
                android:id="@+id/suggestions_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Header suggerimenti -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Suggeriti per te"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- RecyclerView per suggerimenti -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/suggestions_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_suggestion" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>