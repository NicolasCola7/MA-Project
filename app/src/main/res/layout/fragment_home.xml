<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.travel_companion.presentation.viewmodel.HomeViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Data odierna -->
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.currentDate}"
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:textStyle="bold"
                android:layout_marginBottom="20dp" />

            <!-- Card viaggio -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:visibility="visible"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Stato -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgStatus"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_trip"
                            app:tint="@color/green" />

                        <TextView
                            android:id="@+id/tvTripStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="IN CORSO"
                            android:textColor="@color/green"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Destinazione -->
                    <TextView
                        android:id="@+id/tvDestination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Roma"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textStyle="bold" />

                    <!-- Date -->
                    <TextView
                        android:id="@+id/tvDates"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Dal 10/08/2025 al 15/08/2025"
                        android:textAppearance="?attr/textAppearanceBody2" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Messaggio nessun viaggio -->
            <TextView
                android:id="@+id/tvNoTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Nessun viaggio programmato per oggi"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textStyle="italic"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</layout>
