<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.travel_companion.presentation.viewmodel.TripsViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <fragment
                android:id="@+id/autocomplete_fragment"
                android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- ImageView per mostrare l'immagine del luogo -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_place_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/image_place"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Immagine del luogo selezionato"
                    tools:src="@drawable/ic_launcher_background" />

                <!-- Overlay con il nome del luogo -->
                <TextView
                    android:id="@+id/text_place_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gradient_overlay"
                    android:padding="12dp"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Nome del luogo" />
            </androidx.cardview.widget.CardView>

            <!-- Data e ora di inizio -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data e ora di inizio"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="12dp" />

            <Button
                android:id="@+id/edit_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seleziona data e ora"
                android:textSize="14dp"
                android:gravity="start|center_vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Material3.Button" />

            <!-- Data e ora di fine -->
            <TextView
                android:id="@+id/edit_end_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data e ora di fine"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/edit_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seleziona data e ora"
                android:textSize="14dp"
                android:gravity="start|center_vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Material3.Button" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo di viaggio"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="12dp" />

            <Spinner
                android:id="@+id/spinner_trip_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/trip_types"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btn_create_trip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crea Viaggio"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </ScrollView>
</layout>