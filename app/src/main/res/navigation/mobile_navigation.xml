<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <action android:id="@+id/action_global_tripDetailFragment"
        app:destination="@id/tripDetailFragment"
        app:launchSingleTop="true" />

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.travel_companion.presentation.ui.fragment.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_nav_home_to_tripDetailFragment"
            app:destination="@id/tripDetailFragment" />

    </fragment>

    <fragment
        android:id="@+id/nav_new_trip"
        android:name="com.example.travel_companion.presentation.ui.fragment.NewTripFragment"
        android:label="Nuovo Viaggio"
        tools:layout="@layout/fragment_new_trip" />

    <fragment
        android:id="@+id/tripDetailFragment"
        android:name="com.example.travel_companion.presentation.ui.fragment.TripDetailsFragment"
        android:label="Dettaglio viaggio">
        <argument
            android:name="tripId"
            app:argType="long" />

        <!-- Action per aprire la Galleria Foto -->
        <action
            android:id="@+id/action_tripDetailFragment_to_photoGalleryFragment"
            app:destination="@id/photoGalleryFragment"/>

        <action
            android:id="@+id/action_tripDetailFragment_to_createNoteFragment"
            app:destination="@id/createNoteFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

        <action
            android:id="@+id/action_tripDetailFragment_to_noteListFragment"
            app:destination="@id/noteListFragment" />

        <action
            android:id="@+id/action_tripDetailFragment_to_homeFragment"
            app:destination="@id/nav_home" />

    </fragment>

    <!-- Nuovo fragment per la galleria fotografica -->
    <fragment
        android:id="@+id/photoGalleryFragment"
        android:name="com.example.travel_companion.presentation.ui.fragment.PhotoGalleryFragment"
        android:label="Galleria">
        <argument
            android:name="tripId"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/createNoteFragment"
        android:name="com.example.travel_companion.presentation.ui.fragment.CreateNoteFragment"
        android:label="Crea nota">
        <argument
            android:name="tripId"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/noteListFragment"
        android:name="com.example.travel_companion.presentation.ui.fragment.NotesListFragment"
        android:label="Note">
        <argument
            android:name="tripId"
            app:argType="long" />
    </fragment>


</navigation>
